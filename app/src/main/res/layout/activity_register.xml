<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    tools:context=".Register">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/gradient_bg"
        android:baselineAligned="false" />

    <TextView
        android:id="@+id/text_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/printable4u"
        android:gravity="center"
        android:text="สมัครสมาชิก"
        android:textColor="#708090"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_back_login"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back" />

    <ScrollView
        android:id="@+id/scrollable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/user" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                app:errorEnabled="true">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email2"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/printable4u"
                    android:hint="อีเมล"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#708090"

                    />


            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout4"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_password2" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_password2"
                        android:drawablePadding="5dp"
                        android:hint="รหัสผ่าน"
                        android:inputType="textPassword"
                        android:textColorHint="#708090"
                        app:errorEnabled="true"
                        app:passwordToggleEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/edpoonpunn"
                            android:inputType="textPassword" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/confirm_pass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_password2"
                                android:drawablePadding="5dp"
                                android:hint="ยืนยันรหัสผ่าน"
                                android:inputType="textPassword"
                                android:textColorHint="#708090"
                                app:errorEnabled="true"
                                app:passwordToggleEnabled="true">

                                <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:drawablePadding="5dp"
                                    android:fontFamily="@font/edpoonpunn"
                                    android:inputType="textPassword" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout5"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/printable4u"
                    android:hint="ชื่อผู้ใช้"
                    android:inputType="text"
                    android:textColor="#708090" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/printable4u"
                        android:gravity="center_vertical"
                        android:text="เพศ"
                        android:textColor="#708090"
                        android:textSize="18dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_men"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#FFFFFF"
                                android:checked="true"
                                android:fontFamily="@font/printable4u"
                                android:text="ชาย"
                                android:textColor="#708090"
                                android:textSize="18dp" />

                            <RadioButton
                                android:id="@+id/radio_women"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="#FFFFFF"
                                android:fontFamily="@font/printable4u"
                                android:text="หญิง"
                                android:textColor="#708090"
                                android:textSize="18dp" />
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/printable4u"
                            android:text="วันเกิด"
                            android:textColor="#708090"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/date_birth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ic_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_calendar" />

                        <TextView
                            android:id="@+id/text_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/printable4u"
                            android:text="เลือกวันเกิด"
                            android:textColor="#708090"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_drop"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/printable4u"
                            android:text="ธาตุ:"
                            android:textColor="#708090"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/element"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/printable4u"
                            android:text="ชื่อธาตุ"
                            android:textColor="#708090"
                            android:textSize="18dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_body"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_body"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/printable4u"
                            android:text="สภาพร่างกาย:"
                            android:textColor="#708090"
                            android:textSize="18dp" />


                        <TextView
                            android:id="@+id/body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/printable4u"
                            android:text="หยิน หรือ หยาง"
                            android:textColor="#708090"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_num_yhin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/num_yhin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_yin"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/printable4u"
                            android:text="ค่าหยิน : "
                            android:textColor="#708090"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_num_yhang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/num_yhang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_yang"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/printable4u"
                            android:text="ค่าหยาง : "
                            android:textColor="#708090"
                            android:textSize="18dp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout7"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/food_lose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_harvest"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/printable4u"
                    android:hint="ชื่อวัตถุดิบอาหารที่แพ้ (ถ้าไม่มี ให้ -)"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#708090" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout9"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:padding="10dp">

                <Button
                    android:id="@+id/ok"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_ok"
                    android:fontFamily="@font/printable4u"
                    android:text="สมัครสมาชิก"
                    android:textColor="#708090"
                    android:textSize="25dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

