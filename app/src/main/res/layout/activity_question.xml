<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    tools:context=".Question">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/gradient_bg"
        android:baselineAligned="false" />

    <Button
        android:id="@+id/button_back_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_back" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/printable4u"
        android:gravity="center"
        android:text="แบบสอบถาม"
        android:textColor="#708090"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/Layout_question"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="50dp"
        android:background="@drawable/gradient_bg">

        <TextView
            android:id="@+id/Text_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp"
            android:fontFamily="@font/printable4u"
            android:textSize="22dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />
            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />
            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />
            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

        </RadioGroup>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_allbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Layout_question"
        >

    <LinearLayout
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"

        >

        <Button
            android:id="@+id/button_previous_question"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ก่อนหน้า"
            android:background="@drawable/gradient_bg"
            android:fontFamily="@font/printable4u"
            android:textSize="20dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_previous"
        android:layout_below="@id/Layout_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/button_next_question"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ต่อไป"
            android:background="@drawable/gradient_bg"
            android:fontFamily="@font/printable4u"
            android:textSize="20dp"

            />


    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_confirm"
        android:layout_below="@id/layout_allbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/button_confirmall"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ยืนยัน"
            android:fontFamily="@font/printable4u"
            android:textSize="20dp"
            android:background="@drawable/bg_ok"
            />


    </LinearLayout>

</RelativeLayout>

