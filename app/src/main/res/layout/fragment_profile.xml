<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Fragment_profile">

    <!-- TODO: Update blank fragment layout -->

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"

            android:paddingRight="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:src="@drawable/user" />

            <LinearLayout
                android:id="@+id/layout_dataprofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_all"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/name_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="ชื่อผู้ใช้"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/email_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="อีเมล :"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/gender_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="เพศ :"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/birth_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="วันเกิด :"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/element_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="ธาตุ :"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/foodlose_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="วัตถุดิบอาหารที่แพ้ :"
                    android:textSize="18dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_dataprofile2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_all"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_cancel"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/printable4u"
                    android:gravity="center_horizontal"
                    android:text="แก้ไขข้อมูลส่วนตัว"
                    android:textSize="23dp"
                    android:textStyle="bold"

                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_dataprofile3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_all"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/body_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="สภาพร่างกายเป็น :"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/yhin_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="ระดับหยินของฉัน :"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/yhang_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="ระดับหยางของฉัน :"
                    android:textSize="18dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorAccent" />


                <TextView
                    android:id="@+id/favourite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="อาหารที่ฉันถูกใจ :"
                    android:textSize="18dp"

                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="อาหารที่ฉันถูกใจ :"
                    android:textSize="18dp"

                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="อาหารที่ฉันถูกใจ :"
                    android:textSize="18dp"

                    />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/printable4u"
                    android:text="อาหารที่ฉันถูกใจ :"
                    android:textSize="18dp"

                    />


            </LinearLayout>

        </LinearLayout>

</ScrollView>

</FrameLayout>

